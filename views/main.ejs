<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <title>Document</title>
    <link rel="stylesheet" href="/static/css/main.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
</head>

<body>
    <header class="site-header">
        <div class="top">
            <h3 class="logo">
                <a href="#"><img src="/static/image/logo.png" alt="logo"><br>가계부</a>
            </h3>
        </div>
        <nav class="nav">
            <ul>
                <li><a href="#">a</a></li>
                <li><a href="#">b</a></li>
                <li><a href="#">c</a></li>
                <li><a href="#">d</a></li>
            </ul>
        </nav>
    </header>
    <div id="chart">
        <div class="canvas_box">
            <canvas id="myChart" width="10" height="10"></canvas>
            <canvas id="myChart2" width="400" height="400"></canvas>
            
            <div class="form">
                <fieldset class="a">
                    <input type="date">
                    <br><br>
                    <form action="/sendExpend" method="POST" id="expend">
                        <input type="text" placeholder="지출" name="expend">
                            <select name="type" id="se">
                                <option value="transport">교통비</option>
                                <option value="food">식비</option>
                                <option value="etc">기타</option>
                            </select>
                        <input type="submit">
                    </form>

                    <br><br>
                    <form action="/sendIncome" method="POST" id="income">
                        <input type="text" placeholder="수입" name="income">
                        <select name="type2" id="se2">
                            <option value="Pinmoney">용돈</option>
                            <option value="Salary">알바비</option>
                            <option value="etc2">기타</option>
                        </select>
                        <input type="submit">
                        <button type="button" id="delData">데이터 삭제</button>
	<button type="button" id="delDataset">데이터셋 삭제</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>

    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie', data: {
                labels: ['교통비', '식비', '기타'],

                datasets: [{
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                    ],
                    label: 'My First dataset',
                    data: [<%=transport %>, <%=food %>, <%=etc %>]
                }]
            }
        })
        var ctx2 = document.getElementById('myChart2').getContext('2d');
        var myPieChart2 = new Chart(ctx2, {
            type: 'pie', data: {
                labels: ['용돈', '알바비', '기타'],

                datasets: [{
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                    ],
                    label: 'My First dataset2',
                    data: [<%=Pinmoney %>, <%=Salary %>, <%=etc2 %>]

                }]
            }
        })

        
    </script>

</body>

</html>